<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge" />
    <!-- bootstrap -->
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/newGame.css" />

    <!-- scoket -->
    <script src="/socket.io/socket.io.js"></script>
    <title>New Game</title>
  </head>
  <body>
    <!-- navbar -->
    <nav class="navbar navbar-expand navbar-dark bg-dark">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item ">
          <a class="nav-link" href="/home"
            >Home <span class="sr-only">(current)</span></a
          >
        </li>

        <li class="nav-item">
          <a href="/home/newGame" class="nav-link">New Game</a>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <li class="nav-item">
          <a href="/home/logout" class="pr nav-link">Logout</a>
        </li>
      </ul>
    </nav>
    <!-- input from -->
    <div class="container center_div text-center mt-3">
      <form action="/home/newGame" method="POST">
        <div class="form-group">
          <label for="points">Points to win</label>
          <select name="points" class="form-control" id="points">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option selected>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
          </select>
        </div>
        <div class="form-group">
          <label for="reset">New Game Mode</label>
          <select name="reset" class="form-control" id="reset">
            <option>Reset All</option>
            <option>Reset Dark</option>
            <option>Reset White</option>
            <option>No reset</option>
          </select>
        </div>
        <div class="form-group">
          <label for="cards">Number Of Cards</label>
          <select name="cards" class="form-control" id="cards">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option selected>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
          </select>
        </div>
        <input type="submit" value="Start New Game" class="login-btn" />
      </form>
    </div>

    <script src="../javascript/newGame.js"></script>
  </body>
</html>
