            <option>Reset All</option>
            <option>Reset Dark</option>
            <option>Reset White</option>
            <option>No reset</option>
          </select>
        </div>
        <div class="form-group">
          <label for="cards">Number Of Cards</label>
          <select name="cards" class="form-control" id="cards">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option>4</option>
            <option>5</option>
            <option selected>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
          </select>
        </div>
        <input type="submit" value="Start New Game" class="login-btn" />
      </form>
