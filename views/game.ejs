    <div class="container center_div text-center mt-3" id="new-game">
      <form action="/home/newGame" method="POST">
        <div class="form-group">
          <label for="points">Points to win</label>
          <select name="points" class="form-control" id="points">
            <option>1</option>
            <option>2</option>
            <option>3</option>
            <option selected>4</option>
            <option>5</option>
            <option>6</option>
            <option>7</option>
            <option>8</option>
            <option>9</option>
          </select>
        </div>
        <div class="form-group">
